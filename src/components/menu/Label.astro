---
import { t } from "@util/translate";
import { Icon } from "astro-icon/components";
const { name } = Astro.props;
---

<button
  class="text-sm leading-none tracking-wider"
  aria-label={t(name)}
  title={t(name)}
>
  <span class="block transition-colors duration-500 hover:text-primary">
    <Icon name={name} class="pointer-events-none h-8 w-10 px-1" />
  </span>
</button>
