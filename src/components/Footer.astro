    <!-- Bottom Bar -->
    <div
      class="mt-20 border-t border-white/5 pt-10 text-center text-sm font-light tracking-wide opacity-50"
    >
      <p>
        &copy; {today.getFullYear()} Aleto Auto Skla Servis. Všechna práva vyhrazena.
      </p>
