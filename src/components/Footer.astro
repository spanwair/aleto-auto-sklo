        <h3 class="text-sm font-bold uppercase tracking-widest opacity-60">
          Kontakt
        </h3>
        <ul class="space-y-4 text-base">
          <li>
            <a
              href="tel:+420731409899"
              class="group flex items-center gap-3 transition-colors hover:text-accent"
            >
              <svg
                class="h-5 w-5 text-accent transition-transform group-hover:scale-110"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"
